    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
			
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
				<ol class="breadcrumb">
				  <li><a href="#">首页</a></li>
				  <li><a href="#">数据列表</a></li>
				  <li class="active">新增</li>
				</ol>
			<div class="panel panel-default">
              <div class="panel-heading">流程定义图<div style="float:right;cursor:pointer;" data-toggle="modal" data-target="#myModal"><i class="glyphicon glyphicon-question-sign"></i></div></div>
			  <div class="panel-body">
			      <#list mcfs as mcf>
			          <h1>${mcf.certname}</h1>
			          <img src="${APP_PATH}/certs/${mcf.iconpath}">
			      </#list>
			      <button type="button" onclick="pass()" class="btn btn-lg btn-success">审核通过</button>
			      <button type="button" onclick="refuse()" class="btn btn-lg btn-danger">审核拒绝</button>
			  </div>
			</div>
        </div>
